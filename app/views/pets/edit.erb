<h1>Update Pet</h1>


<form action="/pets/<%=@pet.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>

  <br>

  <input type="text" name="pet[name]" id="pet_name">

  <h3>Existing Owners</h3>
  <%@owners.each do |owner|%>
      <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if @pet.owner == owner %>><%= owner.name %></input>
    <%end%><br /><br />


    <h3>New Owner</h3>
  <label>Owner Name: </label>
  <br>
  <input type="text" name="owner[name]" id="owner_name">
  <br><br>

  <input type="submit" value="Update Pet">
</form>


